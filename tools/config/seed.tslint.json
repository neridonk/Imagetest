{
    "rulesDirectory": ["../../node_modules/codelyzer"],
    "rules": {
        "class-name": false,
        "curly": false,
        "eofline": false,
        "indent": ["spaces"],
        "max-line-length": [false, 140],
        "member-ordering": [false,
            "public-before-private",
            "static-before-instance",
            "variables-before-functions"
        ],
        "no-arg": false,
        "no-construct": false,
        "no-duplicate-key": false,
        "no-duplicate-variable": false,
        "no-empty": false,
        "no-eval": false,
        "no-trailing-whitespace": false,
        "no-unused-expression": false,
        "no-unused-variable": false,
        "no-unreachable": false,
        "no-use-before-declare": false,
        "one-line": [false,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "quotemark": [false, "single"],
        "semicolon": [false, "always"],
        "trailing-comma": false,
        "triple-equals": false,
        "variable-name": false,

        "directive-selector-name": [false, "camelCase"],
        "component-selector-name": [false, "kebab-case"],
        "directive-selector-type": [false, "attribute"],
        "component-selector-type": [false, "element"],
        "use-input-property-decorator": false,
        "use-output-property-decorator": false,
        "use-host-property-decorator": false,
        "no-input-rename": false,
        "no-output-rename": false,
        "use-life-cycle-interface": false,
        "use-pipe-transform-interface": false,
        "component-class-suffix": false,
        "directive-class-suffix": false,
        "import-destructuring-spacing": false,
        "templates-use-public": false,
        "no-access-missing-member": false,
        "invoke-injectable": false
    }
}